<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="16dp"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical">

    <TextView
        android:hint="DD-MM-YYYY"
        android:id="@+id/show_date"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:hint="00.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_cost"
        android:layout_alignBaseline="@+id/show_date"
        android:layout_alignBottom="@+id/show_date"
        android:layout_toRightOf="@+id/show_date"
        android:layout_toEndOf="@+id/show_date"
        android:layout_marginLeft="62dp"
        android:layout_marginStart="62dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/circle_plus"
        android:id="@+id/btn_expand_toggle"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>